<%= content_for(:title) {@story.title}%>
<section class="news">
  <article class="news_sltd">
  <%= link_to @story.subject_title, @story.subject, :class => 'news_zagolovok'%>
    <p class="newsdate"><%= Russian::strftime(@story.published_at, :long)%></p>
    <h1><%= @story.title%></h1>
    <%= @story.content.html_safe%>
  </article>
  <article class="rating">
    <p class="rate">-36</p>
    <a href="#" class="plus"><img alt="" src=<%= "#{root_url}assets/plus.png" %>></a>
    <a href="#" class="minus"><img alt="" src=<%= "#{root_url}assets/minus.png" %>></a>
    <p class="share"><span>Поделиться: </span>
        <a href="#"><img src=<%="#{root_url}assets/facebook.png" %> alt="" /></a>
        <a href="#"><img src=<%= "#{root_url}assets/twitter.png" %> alt="" /></a>
        <a href="#"><img src=<%= "#{root_url}assets/lj.png" %> alt="" /></a>
        <a href="#"><img src=<%= "#{root_url}assets/vkontakte.png" %> alt="" /></a>
        <a href="#"><img src=<%= "#{root_url}assets/googleplus.png" %> alt="" /></a>
      <img src=<%="#{root_url}assets/googlecount.png" %> alt="" />
    </p>
  </article>
</section>
<%= render "shared/sidebar", :populars => @populars, :subjects => @popular_subjects %>

